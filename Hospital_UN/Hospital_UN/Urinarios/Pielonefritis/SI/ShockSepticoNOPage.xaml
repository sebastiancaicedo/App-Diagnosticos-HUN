<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital_UN.Urinarios.Pielonefritis.SI.ShockSepticoNOPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="15">
            <Label FontAttributes="Bold" FontSize="Large" TextColor="Black"
                   Text="Con factores de riesgo para gérmenes resistentes o BLEE, sin sepsis grave o shock septico"></Label>
            <StackLayout Orientation="Vertical" Margin="0,10,0,0">
                <Label FontSize="Medium" TextColor="Black"
                       Text="- Piperacilina/tazobactam 4,5 gr IV/8 horas + amikacina 15 mg/kg IV/dia"></Label>
                <Label FontSize="Medium" TextColor="Black" FontAttributes="Bold" Margin="0,15,0,0"
                       Text="Sí alergia a la penicilina:"></Label>
                <Label FontSize="Medium" TextColor="Black"
                       Text="Aztreonam 2 gr IV/8 horas + amikacina 15 mg/kg IV/día."></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>