<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital_UN.Urinarios.Pielonefritis.SI.EnterococoPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="15">
            <Label FontAttributes="Bold" FontSize="Large" TextColor="Black"
                   Text="Sospecha de enterococo: con eviencia de cocos gram positivos en tinción (Gram de orina sin centrifugar)"></Label>
            <StackLayout Orientation="Vertical" Margin="0,10,0,0">
                <Label FontSize="Medium" TextColor="Black"
                       Text="- Sonda vesical"></Label>
                <Label FontSize="Medium" TextColor="Black"
                       Text="Uso previo de antibióticos (principalmente cefalosporinas)"></Label>
                <Label FontSize="Medium" FontAttributes="Bold" TextColor="Black" Margin="0,20,0,0"
                       Text="Tratamiento"></Label>
                <Label FontSize="Medium" TextColor="Black"
                       Text="- Vancomicina 15 mg/kg IV/12 horas"></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>