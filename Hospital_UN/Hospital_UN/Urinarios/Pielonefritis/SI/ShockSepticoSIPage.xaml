<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital_UN.Urinarios.Pielonefritis.SI.ShockSepticoSIPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="15">
            <Label FontAttributes="Bold" FontSize="Large" TextColor="Black"
                   Text="Con factores de riesgo para gérmenes resistentes o BLEE y/o shock séptico"></Label>
            <StackLayout Orientation="Vertical" Margin="0,10,0,0">
                <Label FontSize="Medium" TextColor="Black"
                       Text="- Ertapenem 1 gr IV/día (o meropenem 1 gr IV/8 horas si hay riesgo de Pseudomonas spp - sonda vesical o inmunosupresión)"></Label>
                <Label FontSize="Medium" TextColor="Black"
                       Text="- Piperacilina/tazobactam 4,5 gr IV/8 horas + amikacina 15 mg/kg IV/dia."></Label>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>